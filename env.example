BENZINGA_API_KEY=
BENZINGA_WS_URL="wss://api.benzinga.com/api/v1/news/stream"

# Sink selection: "file" or "s3"
SINK="file"
FILE_DIR="./data"

# S3 options
S3_BUCKET=
S3_PREFIX="benzinga/news"
AWS_REGION=

# Rotation and flush settings
ROTATION_MAX_BYTES=50000000
ROTATION_MAX_SECONDS=300
FLUSH_INTERVAL_SECONDS=5

# WebSocket heartbeat
PING_INTERVAL=30
PING_TIMEOUT=10

# Reconnect backoff
RECONNECT_BASE_DELAY=1.0
RECONNECT_MAX_DELAY=60.0

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="text" # "text" or "json"
