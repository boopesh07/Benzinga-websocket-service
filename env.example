BENZINGA_API_KEY=
BENZINGA_WS_URL="wss://api.benzinga.com/api/v1/news/stream"

# Sink selection: "file" or "s3"
SINK="file"
FILE_DIR="./data"

# S3 options
S3_BUCKET=
S3_PREFIX="benzinga/news"
AWS_REGION=

# Windowed writer settings
WINDOW_MINUTES=30  # Time window size (15, 30, or 60 recommended)
MAX_OBJECT_BYTES=512000000  # Max file/object size before rotation (512MB default)
PART_SIZE_BYTES=16777216  # S3 multipart upload part size (16MB default, min 5MB)
USE_MARKER_FILES=true  # Create uploading.marker files to track in-progress uploads

# AWS Bedrock (for article summarization using Claude)
# Note: Uses AWS_REGION for Bedrock region
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0  # Claude 3.5 Sonnet
SUMMARY_MAX_WORDS=200  # Maximum words in summary (shorter is fine)
BEDROCK_MAX_RETRIES=3  # Maximum retry attempts for Bedrock API calls

# WebSocket heartbeat
PING_INTERVAL=30
PING_TIMEOUT=10

# Reconnect backoff
RECONNECT_BASE_DELAY=1.0
RECONNECT_MAX_DELAY=60.0

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="text" # "text" or "json"
